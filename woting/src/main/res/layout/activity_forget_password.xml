<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dinglan_orange"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/dinglan_orange"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/head_left_btn"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:gravity="left|center" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:background="@mipmap/back_images" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_dinglan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="重置密码"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/activity_head_center_s" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_find_password"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wt_edittext_default_high"
            android:layout_marginLeft="@dimen/wt_login_default_margin_left"
            android:layout_marginRight="@dimen/wt_login_default_margin_right"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_edittext_normal"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:padding="5dip" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="19dp"
                android:src="@mipmap/img_telephone" />

            <EditText
                android:id="@+id/edittext_userphone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/WHITE"
                android:ems="10"
                android:gravity="left|center"
                android:hint="手机号"
                android:maxLength="11"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/wt_login_third"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/wt_edittext_cursor"
                android:textSize="@dimen/wt_edittext_default_text" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wt_edittext_default_high"
            android:layout_marginLeft="@dimen/wt_login_default_margin_left"
            android:layout_marginRight="@dimen/wt_login_default_margin_right"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_edittext_normal"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:padding="5dip" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="19dp"
                android:src="@mipmap/img_password" />

            <EditText
                android:id="@+id/edittext_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/WHITE"
                android:ems="10"
                android:gravity="left|center"
                android:hint="密码"
                android:maxLength="100"
                android:maxLines="1"
                android:password="true"
                android:singleLine="true"
                android:textColor="@color/wt_login_third"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/wt_edittext_cursor"
                android:textSize="@dimen/wt_edittext_default_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wt_edittext_default_high"
            android:layout_marginLeft="@dimen/wt_login_default_margin_left"
            android:layout_marginRight="@dimen/wt_login_default_margin_right"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_edittext_normal"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="19dp"
                android:src="@mipmap/wt_group_vertify" />

            <EditText
                android:id="@+id/et_yzm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@color/WHITE"
                android:gravity="left|center"
                android:hint="验证码"
                android:inputType="number"
                android:maxLength="6"
                android:padding="1dp"
                android:textColor="@color/wt_login_third"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/wt_edittext_cursor"
                android:textSize="@dimen/wt_edittext_default_text" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray_z" />

            <TextView
                android:id="@+id/tv_getyzm"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/et_bg_yanzhengma"
                android:gravity="center"
                android:singleLine="true"
                android:text="获取验证码"
                android:textColor="@color/WHITE"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_cxfasong"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:padding="5dp"
                android:singleLine="true"
                android:text="重新发送"
                android:textColor="@color/gray"
                android:textSize="10sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/wt_login_default_margin_left"
            android:layout_marginRight="@dimen/wt_login_default_margin_right"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wt_button_default_high"
                android:background="@drawable/zhuxiao_press"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/wt_button_default_text"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wt_button_default_high"
                android:background="@drawable/bg_graybutton"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/wt_button_default_text" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>