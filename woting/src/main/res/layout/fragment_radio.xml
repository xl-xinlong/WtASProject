<com.woting.widgetui.pulltorefresh.PullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refresh_view"
      android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:orientation="vertical" >
    
    <include layout="@layout/refresh_head" />

    <com.woting.widgetui.pulltorefresh.PullableExpandableListView
          android:id="@+id/listView_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/WHITE"
        android:groupIndicator="@color/transparent"
        android:scrollbars="none" >
    </com.woting.widgetui.pulltorefresh.PullableExpandableListView>

    <include layout="@layout/load_more" />

</com.woting.widgetui.pulltorefresh.PullToRefreshLayout>