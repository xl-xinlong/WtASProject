<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:background="@color/WHITE"
        android:gravity="left|center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp">

            <ImageView
                android:id="@+id/RankImageUrl"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/wt_6_b_y_b" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/RankTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CNR中国之声"
                android:textColor="@color/dinglan_orange"
                android:layout_marginTop="11dp"
                android:textSize="15sp"
                android:singleLine="true"/>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:layout_weight="1">
            
	            <ImageView
	                android:id="@+id/image_hint_visibility"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@mipmap/image_program_album"
	                android:layout_marginRight="6dp"
	                android:visibility="gone"/>
	
	            <TextView
	                android:id="@+id/RankContent"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:ellipsize="end"
	                android:maxLines="1"
	                android:text="我听科技"
	                android:textColor="@color/beijing"
	                android:textSize="13sp"
	                android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:layout_marginBottom="11dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/image_program_listener" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textSize="9sp"
                    android:textColor="@color/beijing"
                    android:text="6666" />
                
                <ImageView
                    android:id="@+id/image_number_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/image_program_number"
                    android:layout_marginLeft="14dp"/>

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textSize="9sp"
                    android:textColor="@color/beijing"
                    android:text="88集"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

  <!--   <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginBottom="7dp"
        android:background="@color/setting_bg_color" /> -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"   
        android:background="@color/view_color" />

</LinearLayout>