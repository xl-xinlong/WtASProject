<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/WHITE"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:background="@color/app_bg"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/lin_status_denglu"
                        android:layout_width="match_parent"
                        android:layout_height="177dp"
                        android:visibility="visible" >

                        <ImageView
                            android:id="@+id/lin_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:gravity="center" >

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="top"
                                    android:orientation="vertical" >

                                    <ImageView
                                        android:id="@+id/imageView_ewm"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="30dp"
                                        android:src="@mipmap/ewm_white" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="top|center"
                                    android:orientation="vertical" >

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" >

                                        <TextView
                                            android:id="@+id/tv_username"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:singleLine="true"
                                            android:text="小茉莉"
                                            android:textColor="@color/white"
                                            android:textSize="17sp" />
                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dp" >

                                        <ImageView
                                            android:id="@+id/image_touxiang"
                                            android:layout_width="56dp"
                                            android:layout_height="56dp"
                                            android:layout_centerInParent="true"
                                            android:scaleType="centerCrop" />

                                        <ImageView
                                            android:layout_width="56dp"
                                            android:layout_height="56dp"
                                            android:layout_centerInParent="true"
                                            android:src="@mipmap/liubianxing_orange" />
                                    </RelativeLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lin_xiugai"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="top|right"
                                    android:orientation="vertical" >

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="30dp"
                                        android:scaleType="centerCrop"
                                        android:src="@mipmap/image_edit_profile" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:visibility="visible" >

                                <TextView
                                    android:id="@+id/tv_user"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="24岁 水瓶座 北京  "
                                    android:textColor="@color/white"
                                    android:textSize="13sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ID号  "
                                    android:textColor="@color/white"
                                    android:textSize="13sp"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/tv_userid"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="100001"
                                    android:textColor="@color/white"
                                    android:textSize="13sp"
                                    android:visibility="gone" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="13dp"
                                android:gravity="center"
                                android:text="少壮不努力，老大徒伤悲"
                                android:textColor="@color/white"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/lin_status_nodenglu"
                        android:layout_width="match_parent"
                        android:layout_height="134dp"
                        android:visibility="gone" >

                        <ImageView
                            android:id="@+id/lin_image_0"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/text_denglu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:gravity="center"
                                android:text="登 录"
                                android:textColor="@color/WHITE"
                                android:textSize="17sp" />

                            <ImageView
                                android:id="@+id/image_nodenglu"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_marginBottom="25dp"
                                android:layout_marginTop="15dp"
                                android:src="@mipmap/person_nologinimage" />
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/lin_playhistory"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:background="@drawable/person_color"
                    android:gravity="left|center" >

                    <LinearLayout
                        android:layout_width="43dp"
                        android:layout_height="match_parent"
                        android:gravity="center" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="19dp"
                            android:src="@mipmap/wt_person_playhistory" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:text="播放历史"
                        android:textColor="@color/wt_login_third"
                        android:textSize="@dimen/list_text_size" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="13dp"
                        android:layout_weight="1"
                        android:gravity="right|center" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/live_more" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/line_rules_0"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/view_color" />

                <LinearLayout
                    android:id="@+id/lin_like"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:background="@drawable/person_color"
                    android:gravity="left|center" >

                    <LinearLayout
                        android:layout_width="43dp"
                        android:layout_height="match_parent"
                        android:gravity="center" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="19dp"
                            android:src="@mipmap/wt_person_like" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:text="我喜欢的"
                        android:textColor="@color/wt_login_third"
                        android:textSize="@dimen/list_text_size" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="13dp"
                        android:layout_weight="1"
                        android:gravity="right|center" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/live_more" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/line_rules_1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/view_color" />

                <View
                    android:id="@+id/line_rules_2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/view_color" />

                <LinearLayout
                    android:id="@+id/lin_bingding"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:background="@drawable/person_color"
                    android:gravity="left|center" >

                    <LinearLayout
                        android:layout_width="43dp"
                        android:layout_height="match_parent"
                        android:gravity="center" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="19dp"
                            android:src="@mipmap/wt_person_modifypassword" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:text="修改手机号"
                        android:textColor="@color/wt_login_third"
                        android:textSize="@dimen/list_text_size" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="13dp"
                        android:layout_weight="1"
                        android:gravity="right|center" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/live_more" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/line_rules_3"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/view_color" />

                <LinearLayout
                    android:id="@+id/lin_modifypassword"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:background="@drawable/person_color"
                    android:gravity="left|center" >

                    <LinearLayout
                        android:layout_width="43dp"
                        android:layout_height="match_parent"
                        android:gravity="center" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="19dp"
                            android:src="@mipmap/wt_person_modify" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:text="修改密码"
                        android:textColor="@color/wt_login_third"
                        android:textSize="@dimen/list_text_size" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="13dp"
                        android:layout_weight="1"
                        android:gravity="right|center" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/live_more" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/view_color" />

                <LinearLayout
                    android:id="@+id/lin_timer"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:background="@drawable/person_color"
                    android:gravity="left|center" >

                    <LinearLayout
                        android:layout_width="43dp"
                        android:layout_height="match_parent"
                        android:gravity="center" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="19dp"
                            android:src="@mipmap/wt_person_timer" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:text="定时关闭"
                        android:textColor="@color/wt_login_third"
                        android:textSize="@dimen/list_text_size" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="13dp"
                        android:layout_weight="1"
                        android:gravity="right|center" >

                        <TextView
                            android:id="@+id/text_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dp"
                            android:text="00:00"
                            android:textColor="@color/wt_login_third"
                            android:textSize="13sp"
                            android:visibility="gone" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/live_more" />
                    </LinearLayout>
                </LinearLayout>
                <!-- android:id="@+id/lin_update" -->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/view_color" />

                <LinearLayout
                    android:id="@+id/lin_liuliang"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:background="@color/white"
                    android:gravity="left|center" >

                    <LinearLayout
                        android:layout_width="43dp"
                        android:layout_height="match_parent"
                        android:gravity="center" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="19dp"
                            android:src="@mipmap/wt_person_liuliang" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:text="2/3/4G网络流量提醒"
                        android:textColor="@color/wt_login_third"
                        android:textSize="@dimen/list_text_size" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="13dp"
                        android:layout_weight="1"
                        android:gravity="right|center" >

                        <ImageView
                            android:id="@+id/wt_img_toggle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/wt_person_close" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/view_color" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/view_color" />

                <LinearLayout
                    android:id="@+id/lin_set"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:background="@drawable/person_color"
                    android:gravity="left|center" >

                    <LinearLayout
                        android:layout_width="43dp"
                        android:layout_height="match_parent"
                        android:gravity="center" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="19dp"
                            android:src="@mipmap/wt_person_set" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:text="其他设置"
                        android:textColor="@color/wt_login_third"
                        android:textSize="@dimen/list_text_size" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="13dp"
                        android:layout_weight="1"
                        android:gravity="right|center" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/live_more" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/view_color" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>