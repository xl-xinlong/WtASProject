<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dinglan_orange"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/WHITE"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/dinglan_orange"
            android:gravity="center_vertical" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/head_left_btn"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:gravity="left|center" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:background="@mipmap/back_images" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/head_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="手机注册"
                    android:textColor="@color/WHITE"
                    android:textSize="@dimen/activity_head_center_s" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center" >

                <LinearLayout
                    android:id="@+id/head_right_btn"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/head_press"
                    android:gravity="right|center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dip"
                        android:text="保存"
                        android:textColor="@color/WHITE"
                        android:textSize="@dimen/activity_head_right"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/person_color"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@color/WHITE"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/bg_edittext_normal"
                    android:gravity="left|center"
                    android:orientation="horizontal"
                    android:padding="5dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="19dp"
                        android:src="@mipmap/img_username" />

                    <EditText
                        android:id="@+id/et_phonenum"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/WHITE"
                        android:ems="10"
                        android:gravity="left|center"
                        android:hint="请输入您的手机号"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/wt_login_third"
                        android:textColorHint="@color/gray"
                        android:textCursorDrawable="@drawable/wt_edittext_cursor"
                        android:textSize="14dp" >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_edittext_normal"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="19dp"
                        android:layout_marginRight="19dp"
                        android:padding="1dp"
                        android:src="@mipmap/wt_group_vertify" />

                    <EditText
                        android:id="@+id/et_yzm"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/WHITE"
                        android:gravity="left|center"
                        android:hint="请输入验证码"
                        android:inputType="number"
                        android:maxLength="6"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/wt_login_third"
                        android:textColorHint="@color/gray"
                        android:textCursorDrawable="@drawable/wt_edittext_cursor"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/gray_z" />
                     <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                          android:layout_margin="1dp"
                          >
                    <TextView
                        android:id="@+id/tv_getyzm"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="获取验证码"
                        android:textColor="@color/WHITE"
                        android:textSize="12sp"
                        android:background="@drawable/et_bg_yanzhengma"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_cxfasong"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="重新发送"
                        android:textColor="@color/gray"
                        android:textSize="10sp"
                        android:visibility="gone" />
                 </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/zhuxiao_press"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@color/WHITE"
                android:textSize="15dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_next_default"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/bg_graybutton"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@color/WHITE"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>