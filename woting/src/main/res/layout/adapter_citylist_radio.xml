<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/WHITE"
                    android:gravity="left|center"
                    android:padding="10dip" >

                    <ImageView
                        android:id="@+id/RankImageUrl"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/wt_bg_noimage" />

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:orientation="vertical"
                        android:paddingLeft="10dip" >

                        <TextView
                            android:id="@+id/RankTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CNR中国之声" />

                        <TextView
                            android:id="@+id/RankPlaying"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dip"
                            android:text="正在直播：央广新闻" />
<!-- 
                        <TextView
                            android:id="@+id/RankPlayingNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dip"
                            android:text="播放：149.1万人" /> -->
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/album_play" />
                </LinearLayout>
    

</LinearLayout>
